{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["bin/**/*.ts", "lib/**/*.ts"],
  "exclude": [
    "node_modules",
    "cdk.out",
    // Exclude deprecated monolithic stack to avoid type/import conflicts
    "lib/stepaway-infra-stack.ts"
  ]
}
